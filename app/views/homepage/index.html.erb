<div class="row">
  <div class="span1"></div>
  <div class="span7">
    <% @beer_taps.each do |tap| %>
      <div class="hero-unit">
        <h2><%= link_to 'Beer Me', '#', class: 'btn btn-primary btn-large pull-right' if tap.active_keg %><%= tap.name %>: <%= tap.active_keg.try(:name) || 'Offline' %></h2>
        <% if keg = tap.active_keg %>
          <div class="row">
            <div class="span3 offset1 well">
              <h4><%= '%0.1f' % keg.poured %> oz</h4>
              <small>Poured</small>
            </div>
            <div class="span3 well">
              <h4><%= keg.remaining.round %> oz</h4>
              <small>Remaining</small>
            </div>
            <div class="span3 well">
              <h4>Highlight here</h4>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="span3">
    <div class="well">
      Someone did something
    </div>
    <div class="well">
      Someone did something
    </div>
    <div class="well">
      Someone did something
    </div>
    <div class="well">
      Someone did something
    </div>
  </div>
  <div class="span1"></div>
</div>